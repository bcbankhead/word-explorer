#profile
 if data
    if data.words
      .modeselect
        .history
          |#{currentUser}'s Discovery History:
        #addmode
          |add
        #delmode
          |del
      .wordcontainer
        input(class="input-hist" id="histSearch" type="text" placeholder="search letter" tabindex="2")
        #word-box
          for item, i in data.words
            .col1
              if item !== ''
                a(href="/words/" + item) #{item}
          span.stretch
        #word-box-del
          for item, i in data.words
            .col1
              if item !== ''
                a(href="/delete/" + item) #{item}
          span.stretch
      if rMsg
        .removed
          |#{rMsg}  
